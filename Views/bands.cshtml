<h1>Band Tracker</h1>
<h1>These are all of the bands</h1>
@if(@Model.Count != 0)
{
  @foreach(var band in Model)
  {
    <li><a href="/bands/@band.GetId()">@band.GetName()</a></li>
  }
}
else
{
  <p>There is currently no bands here</p>
}
<form action="/bands/clear" method="post">
  <button type="submit" name="button">clear all bands</button>
</form>
<p><a href="/bands/new">Add a new band</a></p>
<p><a href="/">Return Home</a></p>
